<h1><%= @recipe.name %></h1>
<p><%= @recipe.description %></p>
<p>Preparation Time: <%= @recipe.preparation_time %> minutes</p>
<p>Cooking Time: <%= @recipe.cooking_time %> minutes</p>
<p>Public: <%= @recipe.public ? 'Yes' : 'No' %></p>

<%= link_to "Generate Shopping List", generate_shopping_list_recipe_path(@recipe), class: "btn btn-primary" %>

<%= link_to "Add Ingredient", new_food_path(recipe_id: @recipe.id), class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Measurement Unit</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @food.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td><%= food.quantity %></td>
        <td>
      
        <%= button_to "Modify", edit_food_path(food.id), method: :get, class: 'edit_btn' %>
        <%= button_to "Remove", food, method: :delete, data: { confirm: 'Are you sure you want to delete this food?' }, class: "btn btn-danger" %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>