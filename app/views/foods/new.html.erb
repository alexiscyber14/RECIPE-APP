<h2>Add Food</h2>

<div class="container">
<%= form_with model: Food.new, url: foods_path do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :measurement_unit %><br />
    <%= f.text_field :measurement_unit, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :quantity %><br />
    <%= f.number_field :quantity, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>
</div>
